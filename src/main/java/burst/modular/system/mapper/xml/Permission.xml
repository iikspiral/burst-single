        <result column="PERMISSION_TYPE_ID" property="permissionTypeId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ID, PERMISSION_NAME, PERMISSION_CODE, PERMISSION_TYPE_ID
    </sql>

