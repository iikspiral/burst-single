<mapper namespace="burst.modular.system.mapper.PermissionMapper">
    <!-- 开启二级缓存 -->
    <!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/> -->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="burst.modular.system.entity.Permission">
        <id column="ID" property="id" />
        <result column="PERMISSION_NAME" property="permissionName" />
